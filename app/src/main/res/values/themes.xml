<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PSO2AlertAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/title_background</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/title_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/header_background</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/header_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@color/general_background</item><!--Background color-->
        <item name="android:textColor">@color/title_text</item><!--tittle color-->
        <item name="android:textColorPrimary">@color/general_text</item><!--text color of message-->
        <item name="colorPrimary">@color/general_text</item><!-- Button colour -->
        <item name="colorAccent">@color/general_text</item>
    </style>
</resources>